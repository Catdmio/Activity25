<h1>Sales#new</h1>

<%= form_with model: @sale, url: sales_path, local: true do |form| %>
<%= form.label 'Detalle' %>
<%= form.text_area :detail %>
<%= form.label 'Categoria'%>
<%= form.text_field :category %>
<%= form.label 'Valor' %>
<%= form.number_field :value %>
<%= form.label 'Descuento' %>
<%= form.number_field :discount %>
<%= form.label 'Excento de IVA' %>
<%= form.check_box :tax %>

<%= form.submit "Enviar" %>
<% end %>




